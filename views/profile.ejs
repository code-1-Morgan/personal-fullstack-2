                <% } %>

            </div>
        </div> -->
        <div id=messageDiv class="col-sm">
          <!-- <h3>Messages</h3> -->
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message col-sm-3">
              <h6><%= messages[i].username %></h6>
              <h5><%= messages[i].lowBudget %></h5>
              <h5><%= messages[i].midBudget %></h5>
              <h5><%= messages[i].highBudget %></h5>
              <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              <!-- <span><%= messages[i].thumbUp %> </span> -->
              <!-- <span><i class="fa fa-heart" aria-hidden="true"></i></span> -->
            </li>
          <% } %>
          </ul>


        <!-- <% if (user.local.email) { %> -->

        </div>
        <!-- <% } %> -->
    </div>

</div>

<script src="main.js"></script>

</body>
</html>
